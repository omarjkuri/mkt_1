    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Mobile Menu Toggle
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
            
            // Close mobile menu on link click
            document.querySelectorAll('#mobile-menu a').forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenu.classList.add('hidden');
                });
            });

            // Data for trends
            const trends5YearsData = [
                { title: 'Enfoque "AI-First"', icon: 'üß†', description: 'La IA ser√° el motor de la personalizaci√≥n, optimizaci√≥n de campa√±as y an√°lisis predictivo. Se usar√°n chatbots avanzados para interacciones m√°s humanas y complejas, y se automatizar√°n tareas rutinarias para enfocar a los equipos en la estrategia.' },
                { title: 'Marketing por Voz', icon: 'üó£Ô∏è', description: 'Con el crecimiento exponencial de las b√∫squedas por voz, el contenido y los mensajes se adaptar√°n a un lenguaje natural y conversacional para dar respuestas concisas y directas.' },
                { title: 'Experiencias Inmersivas', icon: 'üï∂Ô∏è', description: 'La Realidad Virtual (RV) y Aumentada (RA) crear√°n nuevas formas de experimentar productos y servicios, profundizando la interacci√≥n entre el mundo digital y f√≠sico.' },
                { title: 'Contenido Generado por Usuario', icon: 'üë•', description: 'El UGC se consolidar√° como una herramienta de marketing poderosa. Las estrategias incentivar√°n a los usuarios a convertirse en embajadores de marca activos.' },
                { title: 'Redes Sociales como Ecosistemas', icon: 'üåê', description: 'Las plataformas sociales integrar√°n comercio electr√≥nico, entretenimiento y b√∫squeda, funcionando como las principales puertas de entrada a internet para muchos usuarios.' }
            ];

            const trends10YearsData = [
                { title: 'IA y Personalizaci√≥n Predictiva', icon: 'üîÆ', description: 'La IA no solo personalizar√°, sino que anticipar√° las necesidades del consumidor. Existir√°n asistentes de compra virtuales hiper-inteligentes y aut√≥nomos.' },
                { title: 'Consolidaci√≥n del Metaverso', icon: 'üåå', description: 'Los mundos virtuales ser√°n un espacio principal para la interacci√≥n social y el comercio, ofreciendo oportunidades para construir marcas en entornos totalmente inmersivos.' },
                { title: 'Datos de Primera Mano y Confianza', icon: 'üõ°Ô∏è', description: 'Los datos directos del consumidor, obtenidos con consentimiento, ser√°n el activo m√°s valioso. La transparencia ser√° un diferenciador competitivo clave para generar confianza.' },
                { title: 'Econom√≠a de la Experiencia', icon: '‚ú®', description: 'Todo producto se transformar√° en un servicio que facilite la vida del consumidor, con experiencias de usuario fluidas y personalizadas en cada punto de contacto.' },
                { title: 'Armon√≠a Creativa Humano-IA', icon: 'ü§ù', description: 'Habr√° una colaboraci√≥n profunda entre dise√±adores, estrategas y algoritmos de IA para crear campa√±as innovadoras y altamente efectivas que conecten a un nivel m√°s profundo.' },
                { title: 'Conectividad Ubicua', icon: 'üì°', description: 'Redes avanzadas (6G+) e IoT permitir√°n un marketing contextual en tiempo real, ofreciendo mensajes y ofertas en el momento y lugar exactos con una precisi√≥n sin precedentes.' }
            ];

            // Function to create trend cards
            function createTrendCards(containerId, data) {
                const container = document.getElementById(containerId);
                data.forEach(item => {
                    const card = document.createElement('div');
                    card.className = 'bg-white rounded-xl shadow-lg p-6 cursor-pointer transition-all duration-300 hover:shadow-xl hover:-translate-y-1';
                    
                    card.innerHTML = `
                        <div class="flex items-center mb-3">
                            <span class="text-3xl mr-4">${item.icon}</span>
                            <h4 class="font-bold text-lg text-stone-800">${item.title}</h4>
                        </div>
                        <p class="text-stone-600 text-sm hidden">${item.description}</p>
                    `;
                    
                    container.appendChild(card);
                    
                    card.addEventListener('click', () => {
                        card.querySelector('p').classList.toggle('hidden');
                        card.classList.toggle('bg-teal-50');
                    });
                });
            }
            
            createTrendCards('trends-5-years', trends5YearsData);
            createTrendCards('trends-10-years', trends10YearsData);

            // Chart configuration
            const chartOptions = {
                maintainAspectRatio: false,
                scales: {
                    r: {
                        angleLines: {
                            color: 'rgba(0, 0, 0, 0.1)'
                        },
                        grid: {
                            color: 'rgba(0, 0, 0, 0.1)'
                        },
                        pointLabels: {
                            font: {
                                size: 12,
                                weight: 'bold'
                            },
                            color: '#4a5568'
                        },
                        ticks: {
                            backdropColor: 'rgba(255, 255, 255, 0.75)',
                            stepSize: 2
                        },
                         suggestedMin: 0,
                         suggestedMax: 10
                    }
                },
                plugins: {
                    legend: {
                        position: 'top',
                    }
                }
            };

            // Chart for 5 years
            const ctx5 = document.getElementById('chart5Years').getContext('2d');
            new Chart(ctx5, {
                type: 'radar',
                data: {
                    labels: ['IA', 'Voz', 'Inmersi√≥n', 'UGC', 'Ecosistemas'],
                    datasets: [{
                        label: 'Impacto 2030',
                        data: [9, 7, 7, 8, 8],
                        backgroundColor: 'rgba(13, 148, 136, 0.2)',
                        borderColor: 'rgba(13, 148, 136, 1)',
                        borderWidth: 2,
                        pointBackgroundColor: 'rgba(13, 148, 136, 1)',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgba(13, 148, 136, 1)'
                    }]
                },
                options: chartOptions
            });

            // Chart for 10 years
            const ctx10 = document.getElementById('chart10Years').getContext('2d');
            new Chart(ctx10, {
                type: 'radar',
                data: {
                    labels: ['IA Predictiva', 'Metaverso', 'Confianza', 'Experiencia', 'Creatividad H-IA', 'Conectividad'],
                    datasets: [{
                        label: 'Impacto 2035',
                        data: [10, 8, 9, 9, 8, 10],
                        backgroundColor: 'rgba(217, 119, 6, 0.2)',
                        borderColor: 'rgba(217, 119, 6, 1)',
                        borderWidth: 2,
                        pointBackgroundColor: 'rgba(217, 119, 6, 1)',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgba(217, 119, 6, 1)'
                    }]
                },
                options: chartOptions
            });
        });
